<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"

    tools:context=".adminActivities.AdminMemberProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#3F51B5" >

            <ImageButton
                android:id="@+id/backMembers"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="#818ABF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.019"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:srcCompat="@drawable/ic_back_good" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView_profile2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_baseline_person_24" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:backgroundTint="@color/white" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/profile_fullname_img2"
                android:background="@drawable/ic_baseline_person_24" />

            <TextView
                android:id="@+id/profile_fullname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="@color/black"
                android:layout_alignStart="@id/profile_fullname_img2"
                android:layout_marginStart="50dp"
                android:enabled="false"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/profile_fullname2"
                android:background="#3F51B5" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:backgroundTint="@color/white" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/profile_phone_img2"
                android:background="@drawable/ic_baseline_phone_24" />

            <TextView
                android:id="@+id/profile_phone2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="@color/black"
                android:layout_alignStart="@id/profile_phone_img2"
                android:layout_marginStart="50dp"
                android:enabled="false"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/profile_phone2"
                android:background="#3F51B5" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:backgroundTint="@color/white" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/profile_birthdate_img2"
                android:background="@drawable/ic_baseline_cake_24" />

            <TextView
                android:id="@+id/profile_birthdate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="@color/black"
                android:layout_alignStart="@id/profile_birthdate_img2"
                android:layout_marginStart="50dp"
                android:enabled="false"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/profile_birthdate2"
                android:background="#3F51B5" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:backgroundTint="@color/white" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/profile_hobbies_img2"
                android:background="@drawable/ic_baseline_sports_football_24" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/profile_hobbies2"
                android:background="@null"
                android:layout_alignStart="@id/profile_hobbies_img2"
                android:enabled="false"
                android:textColor="@color/black"
                android:layout_marginStart="50dp"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/profile_hobbies2"
                android:background="#3F51B5" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:backgroundTint="@color/white" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/profile_skills_img2"
                android:background="@drawable/ic_baseline_build_24" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/profile_skills2"
                android:background="@null"
                android:layout_alignStart="@id/profile_skills_img2"
                android:enabled="false"
                android:textColor="@color/black"
                android:layout_marginStart="50dp"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/profile_skills2"
                android:background="#3F51B5" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:backgroundTint="@color/white" >

            <Button
                android:id="@+id/ban_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ban User"
                android:backgroundTint="#3F51B5"
                />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>