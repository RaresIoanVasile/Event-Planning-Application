<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="354dp"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_gravity="center"
    app:cardBackgroundColor="#3F51B5"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="170dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/eventNameText1"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Name: "
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/eventOwnerText1"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Owner: "
        />

    <TextView
        android:id="@+id/groupText1"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="75dp"
        android:layout_below="@id/eventNameText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group: "
        />

    <TextView
        android:id="@+id/dateText1"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupText1"
        android:layout_marginTop="102dp"
        android:layout_marginLeft="10dp"
        android:text="Date: " />

    <TextView
        android:id="@+id/locationText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="10dp"
        android:text="Location: " />

</androidx.cardview.widget.CardView>