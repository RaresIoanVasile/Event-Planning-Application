<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".eventActivities.CreateEventActivity">

    <ImageButton
        android:id="@+id/backToPolls"
        android:layout_width="56dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:srcCompat="@drawable/my_back_arrow" />

    <EditText
        android:id="@+id/pollName"
        android:padding="17dp"
        android:textSize="20sp"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:hint="Poll name"
        android:background="#30ffffff"
        android:backgroundTint="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11" />


    <EditText
        android:id="@+id/pollDescription"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:background="#30ffffff"
        android:backgroundTint="#3F51B5"
        android:hint="Poll description"
        android:padding="17dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pollName"
        app:layout_constraintVertical_bias="0.048" />


    <EditText
        android:id="@+id/pollOptions"
        android:padding="17dp"
        android:textSize="20sp"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:background="#30ffffff"
        android:backgroundTint="#3F51B5"
        android:hint="Enter options. Please separate by comma! Example: big dog, small cat, parrot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pollDescription"
        app:layout_constraintVertical_bias="0.123" />

    <Button
        android:id="@+id/buttonCreatePollPart2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        android:text="Create Poll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pollOptions" />


</androidx.constraintlayout.widget.ConstraintLayout>